rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin config - readable by all, writable only by admins
    match /adminConfig/setup {
      allow read: if true;
      allow write: if isAdmin();
    }
//
    // Products - public read, admin write
    match /products/{product} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories - public read, admin write
    match /categories/{category} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users - read-only for admins
    match /users/{user} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Orders - read-only for admins
    match /orders/{order} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Helper function
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/adminConfig/setup) &&
             get(/databases/$(database)/documents/adminConfig/setup)
               .data.adminEmails.hasAny([request.auth.token.email]);
    }
  }
}